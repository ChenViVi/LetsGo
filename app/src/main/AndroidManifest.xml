<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vivi.letsgo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!--在SDCard中创建与删除文件权限-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!--往SDCard写入数据权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--从SDCard读取数据权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".ui.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.WebActivity"
            android:label="@string/title_activity_web" >
        </activity>
        <activity
            android:name=".ui.ListGroupMessageActivity"
            android:label="@string/title_activity_group_message" >
        </activity>
        <activity
            android:name=".ui.ArticleActivity"
            android:label="@string/title_activity_article" >
        </activity>
        <activity
            android:name=".ui.ListGroupInfoActivity"
            android:label="@string/title_activity_group_info" >
        </activity>
        <activity
            android:name=".ui.ListGroupMessageImageActivity"
            android:label="@string/title_activity_list_group_message_image" >
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".ui.UserInfoActivity"
            android:label="@string/title_activity_user_info" >
        </activity>
        <activity
            android:name=".ui.AddGroupMessageActivity"
            android:label="@string/title_activity_add_group_message" >
        </activity>

        <activity
            android:name=".ui.SignActivity"
            android:label="@string/title_activity_sign" >
        </activity>
    </application>

</manifest>
